<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:scrollbarSize="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="243dp"
            android:layout_height="175dp"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="300dp"
            android:background="#FD0D0D"
            android:text="@string/togglebutton"
            android:textColor="#000000"
            android:textOff="@string/toggle_button"
            android:textOn="@string/toggle_buttonon"
            android:textSize="80sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.materialswitch.MaterialSwitch

            android:id="@+id/switch1"
            style="@style/Widget.Material3.CompoundButton.MaterialSwitch"
            android:layout_width="443dp"
            android:layout_height="181dp"
            android:layout_marginStart="400dp"
            android:layout_marginBottom="100dp"
            android:checked="true"
            android:text="@string/hello_hi"
            android:textColor="#FFEB3B"
            android:textSize="80sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:thumbIconSize="100dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="597dp"
                android:layout_height="487dp"
                android:layout_marginStart="700dp"
                android:layout_marginLeft="700dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="473dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/_zhn0mzbk3q"
                tools:ignore="NotSibling" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>